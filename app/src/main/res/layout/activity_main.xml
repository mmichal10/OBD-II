<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/BT_ON_OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I/O BT"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/discover_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="btnShowPairedDevices"
        android:text="Show devices"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="155dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="insert text" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/messageText"
        android:layout_marginEnd="23dp"
        android:text="SEND" />

    <ListView
        android:id="@+id/newDevices"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BT_ON_OFF"
        app:layout_constraintTop_toBottomOf="@+id/BT_ON_OFF"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/startConnectionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageText"
        android:layout_alignParentStart="true"
        android:text="Start connection" />

    <TextView
        android:id="@+id/serverResponseET"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/messageText"
        android:layout_marginTop="-155dp"
        android:ems="10"
        />
</RelativeLayout>